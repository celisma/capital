<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>Name</th>
      <th>Address</th>
      <th>Dni</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Civil status</th>
      <th>Departamento</th>
      <th>Puesto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.last_name %></td>
        <td><%= person.name %></td>
        <td><%= person.address %></td>
        <td><%= person.dni %></td>
        <td><%= person.phone %></td>
        <td><%= person.email %></td>
        <td><%= person.civil_status %></td>
        <td><%= Department.find(person.Sdepartment_id).name %></td>
        <td><%= Role.find(person.role_id).name %> </td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

